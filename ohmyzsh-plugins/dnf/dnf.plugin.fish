## Aliases

alias -s dnfl="dnf list"                       # List packages
alias -s dnfli="dnf list installed"            # List installed packages
alias -s dnfgl="dnf grouplist"                 # List package groups
alias -s dnfmc="dnf makecache"                 # Generate metadata cache
alias -s dnfp="dnf info"                       # Show package information
alias -s dnfs="dnf search"                     # Search package

alias -s dnfu="sudo dnf upgrade"               # Upgrade package
alias -s dnfi="sudo dnf install"               # Install package
alias -s dnfgi="sudo dnf groupinstall"         # Install package group
alias -s dnfr="sudo dnf remove"                # Remove package
alias -s dnfgr="sudo dnf groupremove"          # Remove package group
alias -s dnfc="sudo dnf clean all"             # Clean cache
